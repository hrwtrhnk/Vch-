#account-page.account-page
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 アカウントの編集
    .account-page__inner--right.user-form
      = form_for(current_user) do |f|
        .field
          .field-label
            = f.label :ニックネーム
          .field-input
            = f.text_field :nickname, autofocus: true
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .actions
          = f.submit "更新", class: 'btn'
        .emptybox
        .line
        .other-btns
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'other-btns__logout-btn'
          = link_to "トップページに戻る", :back, class: 'other-btns__to-toppage-btn'